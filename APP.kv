#:kivy 1.4.0
ScreenManager:
    Main:
<Main>:
    name:"main"
    BoxLayout:
        id:main
        orientation:'vertical'
        size: root.width, root.height
        spacing: '10dp'
        Label:
            text:"Dora's app"
        Button:
            id: load_vid
            text: "Load_vid"
            on_release: root.play_video()
        TextInput:
            id:vid
            hint_text:"video name i.e. video.mp4"
        Button:
            id:Submit
            text:"Submit"
            on_release: root.get_name(root.ids.vid.text)


