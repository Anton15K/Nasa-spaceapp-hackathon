#:kivy 1.4.0
ScreenManager:
    Main:

<Main>:
    name:"main"

    BoxLayout:
        id:main
        orientation:'vertical'
        size: root.width, root.height
        spacing: '10dp'
        Label:
            text:"Dora's app"
        Button:
            id: load_img
            text: "Load_img"
            on_release: root.manager.current ="Load_img"
        TextInput:
            id:img
            hint_text:"location"
        Button:
            id:Submit
            text:"Submit"
            on_release: root.get_name(root.ids.img.text)



